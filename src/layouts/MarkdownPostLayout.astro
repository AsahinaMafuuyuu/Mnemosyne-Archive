---
import BaseLayout from "./BaseLayout.astro";
import ArticleDetailDisplay from "@/components/BlogContent/ArticleDetailDisplay.astro";
import { computedTotalWords } from "@/scripts/totalCount"
import "../output.css";
type ImageInfo = {
    url: string;
    alt: string;
};
interface FrontMatter {
    title: string;
    pubDate: string;
    description: string;
    author: string;
    images?: Array<ImageInfo> | ImageInfo;
    tags: string[];
}
const { frontmatter, compiledContent, rawContent } = Astro.props as {
    frontmatter: FrontMatter;
    compiledContent: () => string;
    rawContent: () => string
};
---

<BaseLayout params={frontmatter}>
    <!-- <ArticleDetailDisplay params={frontmatter} name="mainContent"></ArticleDetailDisplay> -->
    <ArticleDetailDisplay
        slot="mainContent"
        params={frontmatter}
        content={compiledContent()}
        totalCounts={computedTotalWords(rawContent())}
    />
</BaseLayout>
