---
import BaseLayout from "../layouts/BaseLayout.astro";
import Greeting from "../components/Greeting";
import AudioPlayerAside from "../components/AudioPlayerAside.astro";
import "../styles/normalize.css"
// import '../styles/global.css'
import "../output.css"
import Yuki from '../images/Yuki.jpg'

const pageTitle = "愛包ダンスホール";
---

<div class="all-body-container">
  <div class="body-div">
    <BaseLayout pageTitle={pageTitle}>
      <h2>我超棒的博客副标题</h2>
      <Greeting messages={["Hi", "Hello", "Howdy", "Hey there"]} />
      <Greeting client:load messages={["Hej", "Hallo", "Hola", "Habari"]} />
    </BaseLayout>
    <AudioPlayerAside className="fixed top-[50px] left-[50px]" class="" client:load />
  </div>
</div>

<style>

  .all-body-container {
    height: 100vh;
    /* background-image: var(--lunaUrl); */
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
  }

  .body-div {
    height: 100%;
    width: 100vw;
    background-color: rgba(255, 255, 255, 0.55);
    backdrop-filter: blur(14px) saturate(120%);
  }
</style>
